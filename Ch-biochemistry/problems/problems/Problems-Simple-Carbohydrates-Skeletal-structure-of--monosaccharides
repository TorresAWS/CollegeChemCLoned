   %%%%%%%PROBLEM
\begin{question}[ID=\the\value{numA}]\SetQuestionProperties{section-title=\nameref{sec:units}}
Find the molecular formula of the following monosaccharide:
\begin{center}
\chemfig{[2]OH-[4](-(-[:0, 1.2]\textcolor{red}{OH})-(-[:0]HO)-(-[:180]OH)-(=[0]\textcolor{orange}{O})-(-[0]OH))}
\end{center}
\end{question}
\begin{solution}
\ce{C_6H_{12}O6}
 \hspace{0.1cm}\end{solution}\stepcounter{numA}
