            }
        }
    }	  
\end{scope} 

\begin{scope}[shift={(-2cm,2cm)}]
    \draw[line width=.8mm,->] (3,0) -- ++(3,0) node [midway,fill=white] {$\Delta H^{xc}_{solute}$};	  
\end{scope} 
\begin{scope}[shift={(-2cm,-5cm)}]
    \draw[line width=.8mm,->] (3,0) -- ++(3,0) node [midway,fill=white] {$\Delta H^{xc}_{solvent}$};	  
