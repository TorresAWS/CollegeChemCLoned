	   \foreach \i in {1,...,3} {
      \foreach \j in {1,...,3} {
          \foreach \k in {1,...,3} {
               \shade[ball color=red!80] (-\i+0.3*\j, -0.2*\j+1.2*\k) circle(0.3);
