 


%%%%%%%PROBLEM
\begin{question}[ID=\the\value{numA}]\SetQuestionProperties{section-title=\nameref{sec:units}}
Indicate the magnitude measured in the following measurements: 
\begin{inparaenum}[(a)]
\item 2 L %(volume)
\item 5 cm %(length) 
\end{inparaenum}
\end{question}
\begin{solution}
\begin{inparaenum}[(a)]
\item 2 L  (volume)
\item 5 cm  (length)  
\end{inparaenum}
\hspace{0.1cm}\end{solution}\stepcounter{numA}
%%%%%%%%%%%%%%

%%%%%%%PROBLEM
\begin{question}[ID=\the\value{numA}]\SetQuestionProperties{section-title=\nameref{sec:units}}
Indicate the magnitude measured in the following measurements: 
\begin{inparaenum}[(a)]
\item 100 Kg %(mass)
\item 10h %(time) 
\end{inparaenum}
\end{question}
\begin{solution}
\begin{inparaenum}[(a)] 
\item 100 Kg  (mass)
\item 10h  (time) 
\end{inparaenum}
\hspace{0.1cm}\end{solution}\stepcounter{numA}
%%%%%%%%%%%%%%



%%%%%%%PROBLEM
\begin{question}[ID=\the\value{numA}]\SetQuestionProperties{section-title=\nameref{sec:units}}
Answer the following questions:
\begin{inparaenum}[(a)]
\item Indicate the metric base unit for mass %(g)
\item Indicate the metric base unit for time %(s)
\item Indicate metric base unit for volume %(L)
\end{inparaenum}
\end{question}
\begin{solution}
\begin{inparaenum}[(a)]
\item    g 
\item     s 
\item     L 
\end{inparaenum}
\hspace{0.1cm}\end{solution}\stepcounter{numA}
%%%%%%%%%%%%%%


%%%%%%%PROBLEM
\begin{question}[ID=\the\value{numA}]\SetQuestionProperties{section-title=\nameref{sec:units}}
Answer the following questions:
\begin{inparaenum}[(a)]
\item Indicate basic unit of mass in the SI %(kg)
\item What magnitude measures the amount of space occupied by a substance
\end{inparaenum}
\end{question}
\begin{solution}
\begin{inparaenum}[(a)]
\item kg
\item the volume
\end{inparaenum}
\hspace{0.1cm}\end{solution}\stepcounter{numA}
