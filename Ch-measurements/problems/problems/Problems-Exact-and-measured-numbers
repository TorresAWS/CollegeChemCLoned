%%%%%PROBLEM
\begin{question}[ID=\the\value{numA}]\SetQuestionProperties{section-title=\nameref{sec:units}}
Identify the following numbers as measured or exact:
\begin{inparaenum}[(a)]
\item The number of students enrolled in a class is 25 % exact
\item The temperature of a sample is 25$^\circ C$ %measured
\item The mass of an object is 10 Kg	%measured
\item 1000grams is 1Kg	%exact
\end{inparaenum}
\end{question}
\begin{solution}
\begin{inparaenum}[(a)]
\item   exact
\item  measured
\item  measured
\item   exact
 \end{inparaenum}
\hspace{0.1cm}\end{solution}\stepcounter{numA}%%%%%%%%%%%%


