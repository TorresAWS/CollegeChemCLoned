 

\begin{question}[ID=\the\value{numA}]\SetQuestionProperties{section-title=\nameref{sec:units}}
For the following examples, identify the system, its surroundings and the universe:
\begin{inparaenum}[(a)]
\item A hot cup of coffee cooling on your desk % (system: coffee cup ;surroundings: air and desk; universe:coffee cup+air and desk)
\item An air ballon in the atmosphere% (system: ballon ;surroundings: atmosphere; universe:ballon+atmosphere)
 \end{inparaenum}
\end{question}
\begin{solution}\begin{inparaenum}[(a)]
 \item  system: coffee cup ;surroundings: air and desk; universe:coffee cup+air and desk 
\item  system: ballon ;surroundings: atmosphere; universe:ballon+atmosphere 
 \end{inparaenum}\hspace{0.1cm}\end{solution}\stepcounter{numA}%%%%%%%%%%%%

\begin{question}[ID=\the\value{numA}]\SetQuestionProperties{section-title=\nameref{sec:units}}
For the following examples, identify the system, its surroundings and the universe:
\begin{inparaenum}[(a)]
 
\item An hot pot of soup in the refrigerator% (system: pot of soup  ;surroundings: refrigerator; universe:pot of soup +refrigerator)
 \item Ice melting in a closed cup of water% (system: ice ;surroundings: water; universe:ice +water; opposite choice also possible)
 \end{inparaenum}
\end{question}
\begin{solution}\begin{inparaenum}[(a)]
\item  system: pot of soup  ;surroundings: refrigerator; universe:pot of soup +refrigerator 
 \item  system: ice ;surroundings: water; universe:ice +water; opposite choice also possible 
 \end{inparaenum}\hspace{0.1cm}\end{solution}\stepcounter{numA}%%%%%%%%%%%%



\begin{question}[ID=\the\value{numA}]\SetQuestionProperties{section-title=\nameref{sec:units}}
Predict the spontaneity of the following processes selecting whether the forward process is spontaneous, the backwards process is spontaneous or both the forward and backwards are spontaneous:\\
\begin{adjustbox}{width=\columnwidth,center}
 \fontfamily{ppl}\selectfont
\begin{tabular}{llllllll}
\toprule
 Process&					$\Delta S $&&  $\Delta S_{surr}$    &&	 $\Delta S_{univ}$	 &Spontaneous $\leftarrow$     &  Spontaneous $\rightarrow$        \\
\midrule
 A		&	100	&& 100    &&200 &  &        \\
\midrule
 B		&	-100	&& 100    &&0 &  &        \\
\midrule
 C		&	50	&& -100    &&-50 &  &        \\
\bottomrule
\end{tabular} 
\end{adjustbox} 
\end{question}
\begin{solution}
\begin{inparaenum}[(a)]
\item Spontaneous $\rightarrow$
\item Spontaneous $\rightarrow$ and Spontaneous $\leftarrow$
\item Spontaneous $\leftarrow$
 \end{inparaenum}
\hspace{0.1cm}\end{solution}\stepcounter{numA}%%%%%%%%%%%% 



\begin{question}[ID=\the\value{numA}]\SetQuestionProperties{section-title=\nameref{sec:units}}
Predict the spontaneity of the following processes selecting whether the forward process is spontaneous, the backwards process is spontaneous or both the forward and backwards are spontaneous:\\
\begin{adjustbox}{width=\columnwidth,center}
 \fontfamily{ppl}\selectfont
\begin{tabular}{llllllll}
\toprule
 Process&					$\Delta S $&&  $\Delta S_{surr}$    &&	 $\Delta S_{univ}$	 &Spontaneous $\leftarrow$     &  Spontaneous $\rightarrow$        \\
\midrule
 D		&	-50	&& -50    &&-100 &  &        \\
\midrule
 E		&	 100	&& -50    &&50 &  &        \\
\midrule
 F		&	 20	&& 10    &&  &  &        \\
\bottomrule
\end{tabular} 
\end{adjustbox} 
\end{question}
\begin{solution}
\begin{inparaenum}[(a)]
\item Spontaneous $\leftarrow$
\item Spontaneous $\rightarrow$
\item Spontaneous $\rightarrow$
 \end{inparaenum}
\hspace{0.1cm}\end{solution}\stepcounter{numA}%%%%%%%%%%%% 



\begin{question}[ID=\the\value{numA}]\SetQuestionProperties{section-title=\nameref{sec:units}}
The standard entropy of vaporization of a chemical is 80J/K at its boiling point of 300K being the standard enthalpy of vaporization 20KJ. Answer the following questions:
\begin{inparaenum}[(a)]
\item  Indicate the standard entropy of vaporization at its boiling point % 80J/K
\item  Calculate the standard entropy of the surroundings during the vaporization % -67J/K
\item  Calculate the total standard entropy during the vaporization % 13J/K
\item  Is the process spontaneous? % Yes as the total standard entropy is larger than 0
  \end{inparaenum}
\end{question}
\begin{solution}\begin{inparaenum}[(a)]
\item    80J/K
\item    -67J/K
\item    13J/K
\item    Yes as the total standard entropy is larger than 0 
 \end{inparaenum}\hspace{0.1cm}\end{solution}\stepcounter{numA}%%%%%%%%%%%%


\begin{question}[ID=\the\value{numA}]\SetQuestionProperties{section-title=\nameref{sec:units}}
For a certain process, the standard entropy is 30J/K at 300K whereas the standard enthalpy is -100KJ. Answer the following questions:
\begin{inparaenum}[(a)]
\item  Calculate the standard entropy of the surroundings   % 333J/K
\item  Calculate the total standard entropy   % 363J/K
\item  Is the process spontaneous? % Yes as the total standard entropy is larger than 0
  \end{inparaenum}
\end{question}
\begin{solution}\begin{inparaenum}[(a)]
\item    333J/K
\item   363J/K
\item    Yes as the total standard entropy is larger than 0
 \end{inparaenum}\hspace{0.1cm}\end{solution}\stepcounter{numA}%%%%%%%%%%%%



