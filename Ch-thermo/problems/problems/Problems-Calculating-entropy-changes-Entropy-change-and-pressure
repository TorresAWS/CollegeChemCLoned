\begin{question}[ID=\the\value{numA}]\SetQuestionProperties{section-title=\nameref{sec:units}}
Answer the following questions:
\begin{inparaenum}[(a)]
\item Calculate the entropy change of 2 moles of an ideal gas which pressure increases four times at constant temperature. %	 23.0J/K 
\item Calculate the entropy change of 2 moles of an ideal gas which pressure decreases four times at constant temperature. %	 -23.0J/K 
\end{inparaenum}
\end{question}
\begin{solution}
\begin{inparaenum}[(a)]
\item   -23.0J/K 
\item  	23.0J/K 
\end{inparaenum}
\hspace{0.1cm}\end{solution}\stepcounter{numA}%%%%%%%%%%%% 


\begin{question}[ID=\the\value{numA}]\SetQuestionProperties{section-title=\nameref{sec:units}}
Answer the following questions:
\begin{inparaenum}[(a)]
\item Calculate the entropy change of 10 grams of Helium (MW=2g/mol), an ideal gas, which pressure changes from 1 atm to 10 atm at constant temperature. %	 95.7J/K 
\item Calculate the entropy change of 10 grams of Helium (MW=2g/mol), an ideal gas, which pressure changes from 1 atm to 0.5 atm at constant temperature. %	 -28.8J/K 
\end{inparaenum}
\end{question}
\begin{solution}
\begin{inparaenum}[(a)]
\item   -95.7J/K 
\item  	 28.8J/K 
\end{inparaenum}
\hspace{0.1cm}\end{solution}\stepcounter{numA}%%%%%%%%%%%% 
