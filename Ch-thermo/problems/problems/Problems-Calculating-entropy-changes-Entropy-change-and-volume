\begin{question}[ID=\the\value{numA}]\SetQuestionProperties{section-title=\nameref{sec:units}}
Answer the following questions:
\begin{inparaenum}[(a)]
\item Calculate the entropy change of 3 moles of an ideal gas which volume increases two times at constant temperature. %	-27.4J/K 
\item Calculate the entropy change of 3 moles of an ideal gas which volume decreases two times at constant temperature.  %	+27.4J/K
\end{inparaenum}
\end{question}
\begin{solution}
\begin{inparaenum}[(a)]
\item  	-27.4J/K 
\item  	+27.4J/K
\end{inparaenum}
\hspace{0.1cm}\end{solution}\stepcounter{numA}%%%%%%%%%%%% 
 
\begin{question}[ID=\the\value{numA}]\SetQuestionProperties{section-title=\nameref{sec:units}}
Answer the following questions:
\begin{inparaenum}[(a)]
\item Calculate the entropy change of 10 moles of an ideal gas which volume changes from 2L to 3L at constant temperature. %	-33.7J/K 
\item Calculate the entropy change of 1 moles of an ideal gas which volume changes from 2L to 3L at constant temperature. %	-3.37J/K 
\end{inparaenum}
\end{question}
\begin{solution}
\begin{inparaenum}[(a)]
\item  	-33.7J/K 
\item  	-3.37J/K 
\end{inparaenum}
\hspace{0.1cm}\end{solution}\stepcounter{numA}%%%%%%%%%%%% 


