\begin{question}[ID=\the\value{numA}]\SetQuestionProperties{section-title=\nameref{sec:units}}
A piece of metal with a heat capacity of 3 J/K is warmed up from 100$^{\circ}$C to 300$^{\circ}$C. Calculate the entropy change of the metal.
\end{question}
\begin{solution}
 1.28J/K
\hspace{0.1cm}\end{solution}\stepcounter{numA}%%%%%%%%%%%% 


\begin{question}[ID=\the\value{numA}]\SetQuestionProperties{section-title=\nameref{sec:units}}
A piece of metal with a heat capacity of 5 J/K is cooled from 100$^{\circ}$C to 50$^{\circ}$C. Calculate the entropy change of the metal.
\end{question}
\begin{solution}
 -0.72J/K
\hspace{0.1cm}\end{solution}\stepcounter{numA}%%%%%%%%%%%% 

\begin{question}[ID=\the\value{numA}]\SetQuestionProperties{section-title=\nameref{sec:units}}
A 50-g piece of metal with a specific heat capacity of 0.5 J/g$\cdot$ K is warmed up from 300K to 400K. Calculate the entropy change of the metal.
\end{question}
\begin{solution}
 7.19J/K
\hspace{0.1cm}\end{solution}\stepcounter{numA}%%%%%%%%%%%% 

\begin{question}[ID=\the\value{numA}]\SetQuestionProperties{section-title=\nameref{sec:units}}
A 4-g piece of metal with a specific heat capacity of 0.1 J/g$\cdot$ K is cooled from 300K to 200K. Calculate the entropy change of the metal.
\end{question}
\begin{solution}
 -0.16J/K
\hspace{0.1cm}\end{solution}\stepcounter{numA}%%%%%%%%%%%%


\begin{question}[ID=\the\value{numA}]\SetQuestionProperties{section-title=\nameref{sec:units}}
Calculate the heat capacity of 3 moles of an ideal monoatomic gas measured at constant volume.
\end{question}
\begin{solution}
 37.4J/K
\hspace{0.1cm}\end{solution}\stepcounter{numA}%%%%%%%%%%%%


\begin{question}[ID=\the\value{numA}]\SetQuestionProperties{section-title=\nameref{sec:units}}
Calculate the heat capacity of 3 moles of an ideal monoatomic gas measured at constant pressure.
\end{question}
\begin{solution}
 62.3J/K
\hspace{0.1cm}\end{solution}\stepcounter{numA}%%%%%%%%%%%%


\begin{question}[ID=\the\value{numA}]\SetQuestionProperties{section-title=\nameref{sec:units}}
Calculate the heat capacity of 6 moles of an ideal diatomic gas measured at constant pressure.
\end{question}
\begin{solution}
 174.6J/K
\hspace{0.1cm}\end{solution}\stepcounter{numA}%%%%%%%%%%%%


\begin{question}[ID=\the\value{numA}]\SetQuestionProperties{section-title=\nameref{sec:units}}
Calculate the heat capacity of 9 moles of an ideal polyatomic gas measured at constant pressure.
\end{question}
\begin{solution}
 299.3J/K
\hspace{0.1cm}\end{solution}\stepcounter{numA}%%%%%%%%%%%%

 