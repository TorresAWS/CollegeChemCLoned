%%%%%%%PROBLEM
\vspace{-0.5cm}\begin{question}[ID=\the\value{numA}]\SetQuestionProperties{section-title=\nameref{sec:units}}
Calculate the following properties:
\begin{inparaenum}[(a)]
\item   The color of a radiation with $\lambda$= 590nm.	%Violet
\item   The color of a radiation with $\lambda$= 600nm.	%Orange
\item   The color of a radiation with $\lambda$= 530nm.	%Green
\item   The color of a radiation with $\lambda$= 580nm.	%Yellow
 \end{inparaenum}
\end{question}
\begin{solution}
\begin{inparaenum}[(a)]
\item    Violet
\item    Orange
\item    Green
\item    Yellow
\end{inparaenum}
\hspace{0.1cm}\end{solution}\stepcounter{numA}
%%%%%%%%%%%%%%

