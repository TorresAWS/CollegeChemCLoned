%%%%%%%PROBLEM
\vspace{-0.5cm}\begin{question}[ID=\the\value{numA}]\SetQuestionProperties{section-title=\nameref{sec:units}}
Classify the nature of a radiation
\begin{inparaenum}[(a)]
 \item    A radiation with $\gamma$= $3.4\times 10^{8}$Hz   %Microwaves
\item    A radiation with $\gamma$= $1.0\times 10^{10}$Hz   %MicroW
\item    A radiation with $\gamma$= $1.0\times 10^{20}$Hz   %Gamma
\item    A radiation with $\gamma$= $5.0\times 10^{14}$Hz   %UV-vis
 \end{inparaenum}
\end{question}
\begin{solution}
\begin{inparaenum}[(a)]
 \item     Microwaves
\item     MicroW
\item     Gamma
\item     UV-vis  
\end{inparaenum}
\hspace{0.1cm}\end{solution}\stepcounter{numA}
%%%%%%%%%%%%%%


%%%%%%%PROBLEM
\vspace{-0.5cm}\begin{question}[ID=\the\value{numA}]\SetQuestionProperties{section-title=\nameref{sec:units}}
Classify the nature of a radiation
\begin{inparaenum}[(a)]
\item    A radiation with $\gamma$= $1.0\times 10^{12}$Hz   %IR
\item    A radiation with $\gamma$= $1.0\times 10^{5}$Hz   %RadioW
\item    A radiation with $\gamma$= $1.0\times 10^{17}$Hz   %X-rays
\item    A radiation with $\gamma$= $1.0\times 10^{15}$Hz   %UV
 \end{inparaenum}
\end{question}
\begin{solution}
\begin{inparaenum}[(a)]
 \item     IR
\item     RadioW
\item     X-rays
\item     UV 
\end{inparaenum}
\hspace{0.1cm}\end{solution}\stepcounter{numA}
