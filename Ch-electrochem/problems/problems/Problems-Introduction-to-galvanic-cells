%%%%%PROBLEM
\begin{question}[ID=\the\value{numA}]\SetQuestionProperties{section-title=\nameref{sec:units}}
For the galvanic cell below, indicate:  \begin{inparaenum}[(a)]
\item label the sign ($-$ or $+$) of each electrode
\item identify the flow of electrons
 \end{inparaenum}
 \begin{center}
 \begin{tikzpicture}
\colorlet{batteryLeftElectrode}{green!75}
\colorlet{batteryLeftSolution}{green!15}
\colorlet{batteryRightElectrode}{yellow!75}
\colorlet{batteryRightSolution}{yellow!15}
 \batterya{ }{ }	{  }	{ }{2}{\Large Cathode}{\Large Anode}{V}{1}    % 1 to the right
 \end{tikzpicture}
\end{center}
\end{question}
\begin{solution}
\begin{inparaenum}[(a)]
 \item  left  $+$ , right  $-$
\item    from right to left
  \end{inparaenum}
 \hspace{0.1cm}\end{solution}\stepcounter{numA}%%%%%%%%%%%%



%%%%%PROBLEM
