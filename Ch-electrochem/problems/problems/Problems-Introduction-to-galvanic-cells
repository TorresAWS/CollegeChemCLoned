\colorlet{batteryRightElectrode}{orange!75}
\colorlet{batteryRightSolution}{orange!15}
 \batterya{ }{ }	{  }	{ }{2}{\Large Anode}{\Large Cathode}{V}{1}    % 1 to the right
 \end{tikzpicture}
\end{center}
\end{question}
\begin{solution}
\begin{inparaenum}[(a)]
