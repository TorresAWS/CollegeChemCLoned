\faDiamond\ \textlcsc{ \textcolor{dgreen}{\Large \textbf{Study Check}} }\\
 For the galvanic cell below, indicate:  
\begin{inparaenum}[(a)]
\item label the signs of the electrodes % Anode, right, $-$;Cathode, left, $+$   
\item identify the flow of electrons % from right to left
\item identify the flow of cations and anions % anions from left to right; cations from right to left
\item identify the oxidation and reduction	%Oxidation on the right; reduction on the left
 \end{inparaenum}
 \begin{center}
 \begin{tikzpicture}
\colorlet{batteryLeftElectrode}{red!75}
\colorlet{batteryLeftSolution}{red!15}
\colorlet{batteryRightElectrode}{blue!75}
\colorlet{batteryRightSolution}{blue!15}
 \batterya{ }{ }	{  }	{ }{2}{cathode}{anode}{V}{1}    % 1 to the right
 \end{tikzpicture}
\end{center}
 \providetoggle{long}\settoggle{long}{true}\iftoggle{long}{}{\begin{flushright} \mytriangleright{dgreen}\small 
 Answer: 
\begin{inparaenum}[(a)]
\item   Anode, right, $-$;Cathode, left, $+$   
\item   from right to left
\item  anions from left to right; cations from right to left
\item  Oxidation on the right; reduction on the left
 \end{inparaenum} 
 \end{flushright} }

