\draw [red, thick] (2.2,-2) to [square right brace] (2.2,2);
\node [red] at (3,2){\Large +};
  \end{scope}


 \begin{scope}[shift={(6,-5)},rotate=00] 
\filldraw[even odd rule,inner color=mydarkred,outer color=white, line width=0, draw=white] (0,0) circle (2.5);
  \coordinate (O)  at (0,0);
   \fill[radius=2.0pt,mydarkblue] (O) circle ;
