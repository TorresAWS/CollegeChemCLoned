%\draw [red, thick] (2.2,-2) to [square right brace] (2.2,2);
%\node [red] at (3,2){+};
  \end{scope}

 \begin{scope}[shift={(0,-5)},rotate=00] 
\filldraw[even odd rule,inner color=mydarkred,outer color=white, line width=0, draw=white] (0,0) circle (1.5);
  \coordinate (O)  at (0,0);
   \fill[radius=2.0pt,mydarkblue] (O) circle ;
\pic at (0,0) {nucleussmall} node at  (0,-1) {\ce{^{12}_{6}C^+}} ;

\draw[ -, >=latex'](0.3,0.2) -- coordinate (x axis) (0.9,0.9); 
