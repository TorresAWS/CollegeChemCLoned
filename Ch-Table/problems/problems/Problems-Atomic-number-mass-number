\begin{inparaenum}[(a)]
\item \ce{^{106}_{44}X}  % Ruthenium-106
\item \ce{^{93}_{40}X}  % Zirconium-93
\item \ce{^{85}_{36}X}  % Krypton-85
\end{inparaenum}
 \end{question}
\begin{solution}
\begin{inparaenum}[(a)]
\item   Ruthenium-106
\item   Zirconium-93
\item   Krypton-85
\end{inparaenum}
\hspace{0.1cm}\end{solution}\stepcounter{numA}
