%%%%%%%PROBLEM
\begin{question}[ID=\the\value{numA}]\SetQuestionProperties{section-title=\nameref{sec:units}}
Fill the table below indicating the number of electrons ($n_e$), neutrons ($n_n$) and protons ($n_p$) for the following charged atoms:
\begin{center}\newcolumntype{Y}{>{\raggedright\arraybackslash}X}\begin{tabularx}{\columnwidth}{YYYYYY}
\toprule
&Isotope	&	$n_e$	&		$n_p$ & $n_n$	 \\  
\midrule
a & \ce{^{48}_{20}Ca^{+2}}			&18  			&20	 		 &28  	 \\   %\item   $n_e$=18		 	$n_p$=20	   		$n_n$=28 
b & \ce{^{18}_{9}F^{-}}				&10  			&9	 		 &9  	 \\   %\item   $n_e$=10		 	$n_p$=9	   		$n_n$=9 
c & \ce{^{62}_{28}Ni^{3+}}			&25  			&28	 		 &34  	 \\   %\item   $n_e$=25		 	$n_p$=28	   		$n_n$=34
\bottomrule
\end{tabularx}\end{center}
 \end{question}
\begin{solution}
\begin{inparaenum}[(a)]
 \item   $n_e$=18		 	$n_p$=20	   		$n_n$=28 
 \item   $n_e$=10		 	$n_p$=9	   		$n_n$=9 
 \item   $n_e$=25		 	$n_p$=28	   		$n_n$=34
\end{inparaenum} 
\hspace{0.1cm}\end{solution}\stepcounter{numA}
%%%%%%%%%%%%%%%%%%%%%PROBLEM
\begin{question}[ID=\the\value{numA}]\SetQuestionProperties{section-title=\nameref{sec:units}}
Fill the table below indicating the number of electrons ($n_e$), neutrons ($n_n$) and protons ($n_p$) for the following charged atoms:
\begin{center}
\newcolumntype{Y}{>{\raggedright\arraybackslash}X}
\begin{tabularx}{\columnwidth}{YYYYYY}
\toprule
&Isotope	&	$n_e$	&		$n_p$ & $n_n$	 \\  
\midrule
a &\ce{^{147}_{61}Pm^+}				&60  			&61	 		 &86   \\ 	 %\item   $n_e$=60		 	$n_p$=61		   $n_n$=86   
b & \ce{^{192}_{77}Ir^-}				&78  			&77	 		 &115  	 \\   %\item   $n_e$=78		 	$n_p$=77		   $n_n$=115 
c & \ce{^{209}_{83}Bi^{-2}}			&85  			&83	 		 &126  	 \\   %\item   $n_e$=85		 	$n_p$=83	   		$n_n$=126 
\bottomrule
\end{tabularx}\end{center}
 \end{question}
\begin{solution}
\begin{inparaenum}[(a)]
 \item   $n_e$=60		 	$n_p$=61		   $n_n$=86   
 \item   $n_e$=78		 	$n_p$=77		   $n_n$=115 
 \item   $n_e$=85		 	$n_p$=83	   		$n_n$=126 
\end{inparaenum} 
\hspace{0.1cm}\end{solution}\stepcounter{numA}
