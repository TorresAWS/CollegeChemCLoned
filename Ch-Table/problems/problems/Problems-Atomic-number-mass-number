%%%%%%%PROBLEM
\begin{question}[ID=\the\value{numA}]\SetQuestionProperties{section-title=\nameref{sec:units}}
Fill the table below indicating the number of electrons ($n_e$), neutrons ($n_n$) and protons ($n_p$) for the following neutral atoms:
\begin{center}\newcolumntype{Y}{>{\raggedright\arraybackslash}X}\begin{tabularx}{\columnwidth}{YYYYYY}
\toprule
&Isotope	&	$n_e$	&		$n_p$ & $n_n$	 \\
\midrule
a &\ce{^{14}_{7}N}		&  			&	 		 &   \\
b & \ce{^{15}_{7}N}		&  			&	 		 &  	 \\
c & \ce{^{13}_{7}N}		&  			&	 		 &  	 \\
\bottomrule
\end{tabularx}\end{center}
 \end{question}
\begin{solution}
\begin{inparaenum}[(a)]
\item\ce{^{14}_{7}N}		  $n_e$=7			 	$n_p$=7		   $n_n$=7	  
\item \ce{^{15}_{7}N}		  $n_e$=7			 	$n_p$=7		   $n_n$=8	  
 \item\ce{^{13}_{7}N}		  $n_e$=7			 	$n_p$=7		   $n_n$=6
\end{inparaenum} 
\hspace{0.1cm}\end{solution}\stepcounter{numA}
%%%%%%%%%%%%%%


%%%%%%%PROBLEM
\begin{question}[ID=\the\value{numA}]\SetQuestionProperties{section-title=\nameref{sec:units}}
Fill the table below indicating the number of electrons ($n_e$), neutrons ($n_n$) and protons ($n_p$) for the following neutral atoms:
\begin{center}\newcolumntype{Y}{>{\raggedright\arraybackslash}X}\begin{tabularx}{\columnwidth}{YYYYYY}
\toprule
&Isotope	&	$n_e$	&		$n_p$ & $n_n$	 \\
\midrule
a &\ce{^{134}_{55}Cs}		&  			&	 		 &   \\
b & \ce{^{135}_{55}Cs}			&  			&	 		 &  	 \\
c & \ce{^{137}_{55}Cs}			&  			&	 		 &  	 \\
\bottomrule
\end{tabularx}\end{center}
 \end{question}
\begin{solution}
\begin{inparaenum}[(a)]
\item\ce{^{134}_{55}Cs}			  $n_e$=55			 	$n_p$=55		   $n_n$=79	  
\item \ce{^{135}_{55}Cs}		  $n_e$=55			 	$n_p$=55		   $n_n$=80	  
 \item\ce{^{137}_{55}Cs}		  $n_e$=55			 	$n_p$=55		   $n_n$=82
\end{inparaenum} 
\hspace{0.1cm}\end{solution}\stepcounter{numA}
