%%%%%%%PROBLEM
\begin{question}[ID=\the\value{numA}]\SetQuestionProperties{section-title=\nameref{sec:units}}
In an atom, the nucleus contains:
\begin{inparaenum}[(a)]
\item an equal number of protons and electrons.
\item all the protons and neutrons
\item all the protons and electrons
\item only neutrons
\item only protons
\end{inparaenum}
\end{question}
\begin{solution}
all the protons and neutrons
\hspace{0.1cm}\end{solution}\stepcounter{numA}
%%%%%%%%%%%%%%


%%%%%%%PROBLEM
\begin{question}[ID=\the\value{numA}]\SetQuestionProperties{section-title=\nameref{sec:units}}
In an ion, the nucleus contains:
\begin{inparaenum}[(a)]
\item an equal number of protons and electrons.
\item all the protons and neutrons
\item all the protons and electrons
\item only neutrons
\item only protons
\end{inparaenum}
\end{question}
\begin{solution}
all the protons and neutrons
\hspace{0.1cm}\end{solution}\stepcounter{numA}



%%%%%%%PROBLEM
\begin{question}[ID=\the\value{numA}]\SetQuestionProperties{section-title=\nameref{sec:units}}
Associate the following statements with either an electron, a proton or a neutron:
\begin{inparaenum}[(a)]
\item are found away from the nucleus % electrons
\item are atracted to a proton % electron
\item are negatively charged % electrons
\item are found in the nucleus % protons and neutrons
\end{inparaenum}
\end{question}
\begin{solution}
 \begin{inparaenum}[(a)]
\item   electrons
\item   electron
\item  electrons
\item   protons and neutrons
\end{inparaenum}
\hspace{0.1cm}\end{solution}\stepcounter{numA}%%%%%%%PROBLEM

%%%%%%%PROBLEM
\begin{question}[ID=\the\value{numA}]\SetQuestionProperties{section-title=\nameref{sec:units}}
Associate the following statements with either an electron, a proton or a neutron:
\begin{inparaenum}[(a)]
\item are atracted to a electron % proton
\item have the smallest mass % electrons
\item are positively charged % protons
\item are neutraly charged % neutrons
\end{inparaenum}
\end{question}
\begin{solution}
 \begin{inparaenum}[(a)]
\item   proton
\item   electrons
\item   protons
\item   neutrons
\end{inparaenum}
\hspace{0.1cm}\end{solution}\stepcounter{numA}

%%%%%%%PROBLEM
\begin{question}[ID=\the\value{numA}]\SetQuestionProperties{section-title=\nameref{sec:units}}
Indicate whether the following statements are true or false:
\begin{inparaenum}[(a)]
 \item Neutrons repel to each other % false
 \item Protons and neutrons have opposite charges % false
\item Electrons repel to each other % true
\end{inparaenum}
\end{question}
\begin{solution}
 \begin{inparaenum}[(a)]
 \item   false
 \item   false
\item   true
\end{inparaenum}
\hspace{0.1cm}\end{solution}\stepcounter{numA}

%%%%%%%PROBLEM
\begin{question}[ID=\the\value{numA}]\SetQuestionProperties{section-title=\nameref{sec:units}}
Indicate whether the following statements are true or false:
\begin{inparaenum}[(a)]
\item Protons and electrons have opposite charges % true
\item Protons repel to each other % true
 \item Neutrons and protons have very different mass % false
\end{inparaenum}
\end{question}
\begin{solution}
 \begin{inparaenum}[(a)]
\item   true
\item   true
 \item   false
\end{inparaenum}
\hspace{0.1cm}\end{solution}\stepcounter{numA}



