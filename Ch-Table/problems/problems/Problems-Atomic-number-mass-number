%%%%%%%PROBLEM
\begin{question}[ID=\the\value{numA}]\SetQuestionProperties{section-title=\nameref{sec:units}}
Select the isotopes from the list below:
\begin{inparaenum}[(a)]
\item \ce{^{90}_{228}X}
\item \ce{^{231}_{90}X}
\item \ce{^{230}_{90}X}
\item \ce{^{90}_{229}X}
\item \ce{^{228}_{90}X}
\item \ce{^{230}_{100}X}
\item \ce{^{229}_{90}X}
\end{inparaenum}
\end{question}
\begin{solution}
\ce{^{228}_{90}X}; \ce{^{229}_{90}X}; \ce{^{230}_{90}X}; \ce{^{231}_{90}X}
\hspace{0.1cm}\end{solution}\stepcounter{numA}
